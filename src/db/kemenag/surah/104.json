[
	{
		"aya_id": 6180,
		"aya_number": 1,
		"aya_text": "وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍۙ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "Celakalah bagi setiap pengumpat dan pencela,"
	},
	{
		"aya_id": 6181,
		"aya_number": 2,
		"aya_text": " ۨالَّذِيْ جَمَعَ مَالًا وَّعَدَّدَهٗۙ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "yang mengumpulkan harta dan menghitung-hitungnya,"
	},
	{
		"aya_id": 6182,
		"aya_number": 3,
		"aya_text": "يَحْسَبُ اَنَّ مَالَهٗٓ اَخْلَدَهٗۚ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "dia (manusia) mengira bahwa hartanya itu dapat mengekalkannya."
	},
	{
		"aya_id": 6183,
		"aya_number": 4,
		"aya_text": "كَلَّا لَيُنْۢبَذَنَّ فِى الْحُطَمَةِۖ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "Sekali-kali tidak! Pasti dia akan dilemparkan ke dalam (neraka) Hutamah."
	},
	{
		"aya_id": 6184,
		"aya_number": 5,
		"aya_text": "وَمَآ اَدْرٰىكَ مَا الْحُطَمَةُ ۗ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "Dan tahukah kamu apakah (neraka) Hutamah itu?"
	},
	{
		"aya_id": 6185,
		"aya_number": 6,
		"aya_text": "نَارُ اللّٰهِ الْمُوْقَدَةُۙ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "(Yaitu) api  (azab) Allah yang dinyalakan,"
	},
	{
		"aya_id": 6186,
		"aya_number": 7,
		"aya_text": "الَّتِيْ تَطَّلِعُ عَلَى الْاَفْـِٕدَةِۗ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "yang (membakar) sampai ke hati."
	},
	{
		"aya_id": 6187,
		"aya_number": 8,
		"aya_text": "اِنَّهَا عَلَيْهِمْ مُّؤْصَدَةٌۙ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "Sungguh, api itu ditutup rapat atas (diri) mereka,"
	},
	{
		"aya_id": 6188,
		"aya_number": 9,
		"aya_text": "فِيْ عَمَدٍ مُّمَدَّدَةٍ ࣖ",
		"sura_id": 104,
		"juz_id": 30,
		"page_number": 601,
		"translation_aya_text": "(sedang mereka itu) diikat pada tiang-tiang yang panjang."
	}
